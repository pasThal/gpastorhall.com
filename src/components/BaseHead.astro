---
import "../styles/global.css";
import { AstroSeo } from "@astrolib/seo";
---

<AstroSeo
  title="Gregory Pastor-Hall | Student, and Creator"
  description="Welcome to my site!"
  canonical="https://gpastorhall.com/"
  openGraph={{
    url: "https://gpastorhall.com/",
    title: "Gregory Pastor-Hall | IT Professional and Creator",
    description: "Welcome to my site! Here I share my personal contact info, my resume, and other info about my life.",
    images: [
      {
        url: "https://gpastorhall.com/images/og-image.jpg", // Replace with your image path
        width: 1200,
        height: 630,
        alt: "Gregory Pastor-Hall Personal Site Banner",
        type: "image/jpeg",
      },
    ],
    site_name: "gpastorhall.com",
    type: "website",
    locale: "en_US",
  }}
  twitter={{
    handle: "@halgory",  // Update with your actual Twitter handle
    site: "@halgory",
    cardType: "summary_large_image",
  }}
/>

<!-- Basic Meta Tags -->
<title>Greg | IT Professional, Developer, and Creator</title>
<meta name="description" content="Explore the work, projects, and personal insights of Gregory Pastor-Hall, a creative IT professional and developer." />
<meta name="keywords" content="Gregory Pastor-Hall, IT professional, developer, personal projects, technology, gpastorhall.com" />
<meta name="author" content="Gregory Pastor-Hall" />

<!-- Favicons -->
<link rel="icon" href="/favicon.ico" sizes="any" />
<link rel="icon" href="/icon.svg" type="image/svg+xml" />
<link rel="apple-touch-icon" href="/apple-touch-icon.png" />
<link rel="manifest" href="/manifest.webmanifest" />

<!-- Open Graph / Facebook -->
<meta property="og:type" content="website" />
<meta property="og:url" content="https://gpastorhall.com/" />
<meta property="og:title" content="Greg | IT Professional and Creator" />
<meta property="og:description" content="Explore Gregory Pastor-Hall's portfolio, IT insights, and personal projects." />
<meta property="og:image" content="https://gpastorhall.com/images/og-image.jpg" />

<!-- Twitter -->
<meta property="twitter:card" content="summary_large_image" />
<meta property="twitter:url" content="https://gpastorhall.com/" />
<meta property="twitter:title" content="Greg | IT Professional and Creator" />
<meta property="twitter:description" content="Explore the work, projects, and personal insights of Gregory Pastor-Hall." />
<meta property="twitter:image" content="https://gpastorhall.com/images/og-image.jpg" />

<!-- Canonical URL -->
<link rel="canonical" href="https://gpastorhall.com/" />

<!-- Additional SEO -->
<meta name="robots" content="index, follow" />
<meta name="googlebot" content="index, follow" />

<!-- Favicons for different sizes -->
<link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
<link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
<link rel="icon" type="image/png" sizes="48x48" href="/favicon-48x48.png" />

<!-- Theme Color -->
<meta name="theme-color" content="#ffffff" />

<!-- For IE -->
<meta http-equiv="X-UA-Compatible" content="IE=edge" />
