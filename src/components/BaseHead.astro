---
import "../styles/global.css";
import { AstroSeo } from "@astrolib/seo";
---

<AstroSeo
  title="Gregory Pastor-Hall | Student and Tinkerer"
  description="Welcome to my personal site!"
  canonical="https://gpastorhall.com/"
  openGraph={{
    url: "https://gpastorhall.com/",
    title: "Gregory Pastor-Hall | Student and Tinkerer",
    description: "Hi, I'm Greg! This is my site where I share a bit about myself, my hobbies, and my projects.",
    images: [
      {
        url: "https://gpastorhall.com/images/og-image.jpg", // Replace with your image path
        width: 1200,
        height: 630,
        alt: "Gregory Pastor-Hall Personal Site Banner",
        type: "image/jpeg",
      },
    ],
    site_name: "gpastorhall.com",
    type: "website",
    locale: "en_US",
  }}
  twitter={{
    handle: "@gpastorhall", // Update with your actual Twitter handle
    site: "@gpastorhall",
    cardType: "summary_large_image",
  }}
/>

<!-- Basic Meta Tags -->
<title>Gregory Pastor-Hall | Student and Tinkerer</title>
<meta name="description" content="Hi, I'm Greg! I'm a computer engineering student sharing my hobbies, projects, and ideas." />
<meta name="keywords" content="Gregory Pastor-Hall, computer engineering student, personal projects, tinkering, gpastorhall.com" />
<meta name="author" content="Gregory Pastor-Hall" />

<!-- Favicons -->
<link rel="icon" href="/favicon.ico" sizes="any" />
<link rel="icon" href="/icon.svg" type="image/svg+xml" />
<link rel="apple-touch-icon" href="/apple-touch-icon.png" />
<link rel="manifest" href="/manifest.webmanifest" />

<!-- Open Graph / Facebook -->
<meta property="og:type" content="website" />
<meta property="og:url" content="https://gpastorhall.com/" />
<meta property="og:title" content="Greg | Student and Tinkerer" />
<meta property="og:description" content="Hi, I'm Greg! This is where I share my hobbies, personal projects, and ideas." />
<meta property="og:image" content="https://gpastorhall.com/images/og-image.jpg" />

<!-- Twitter -->
<meta property="twitter:card" content="summary_large_image" />
<meta property="twitter:url" content="https://gpastorhall.com/" />
<meta property="twitter:title" content="Greg | Student and Tinkerer" />
<meta property="twitter:description" content="Hi, I'm Greg! I'm a computer engineering student sharing my projects and hobbies." />
<meta property="twitter:image" content="https://gpastorhall.com/images/og-image.jpg" />

<!-- Canonical URL -->
<link rel="canonical" href="https://gpastorhall.com/" />

<!-- Additional SEO -->
<meta name="robots" content="index, follow" />
<meta name="googlebot" content="index, follow" />

<!-- Favicons for different sizes -->
<link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
<link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
<link rel="icon" type="image/png" sizes="48x48.png" href="/favicon-48x48.png" />

<!-- Theme Color -->
<meta name="theme-color" content="#ffffff" />

<!-- For IE -->
<meta http-equiv="X-UA-Compatible" content="IE=edge" />
